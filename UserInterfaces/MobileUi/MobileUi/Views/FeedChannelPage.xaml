<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileUi.Views.FeedChannelPage">
    <ContentPage.Content>

        <StackLayout Spacing="0">
            <Label Text="Feed channel"  Background="Blue" TextColor="White" Padding="10,10"/>
            <CollectionView x:Name="feedItemsCollectionView" ItemsSource="{Binding FeedItems}" 
                            Background="#dddddd" SelectionMode="Single"
                            SelectionChangedCommand="{Binding FeedItemSelectedCommand}"
                            SelectionChangedCommandParameter=
                                "{Binding SelectedItem, Source={x:Reference feedItemsCollectionView}}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Spacing="0" Padding="20,10,0,0">
                            <Label Text="{Binding Title}" VerticalTextAlignment="Center" 
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding Description}" VerticalTextAlignment="Center" 
                                   FontAttributes="Italic"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>